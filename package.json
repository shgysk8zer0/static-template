{
  "name": "static-template",
  "version": "1.0.0",
  "private": true,
  "description": "A template repository for static sites, including skeleton JS, CSS, SVGs, fonts, etc.",
  "config": {
    "serve": {
      "domain": "localhost",
      "path": "./",
      "port": 8000
    },
    "dir": {
      "css": "css/",
      "js": "js/",
      "img": "img/",
      "html": "./"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shgysk8zer0/static-template.git"
  },
  "keywords": [
    "static",
    "template",
    "ecmascript",
    "javascript",
    "css",
    "svg",
    "icons"
  ],
  "author": "Chris Zuber <shgysk8zer0@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shgysk8zer0/static-template/issues"
  },
  "homepage": "https://github.com/shgysk8zer0/static-template",
  "scripts": {
    "preinstall": "git submodule update --recursive --init",
    "postinstall": "npm run build:icons",
    "start": "npm run netlify:serve",
    "test": "npm run lint:js && npm run lint:css",
    "fix": "npm run fix:js && npm run fix:css",
    "build": "npm run build:icons",
    "build:icons": "svg-sprite-generate -c icons.csv -o img/icons.svg",
    "lint:css": "stylelint ${npm_package_config_dir_css}",
    "lint:js": "eslint ${npm_package_config_dir_js}",
    "fix:css": "stylelint ${npm_package_config_dir_css} --fix",
    "fix:js": "eslint ${npm_package_config_dir_js} --fix",
    "netlify:deploy": "netlify deploy",
    "netlify:serve": "netlify dev",
    "netlify:live": "netlify dev --live"
  },
  "dependencies": {
    "svg-sprite-generator": "0.0.7"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-async-await": "0.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "netlify-cli": "^2.19.0",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-standard": "^18.3.0",
    "svgo": "^1.2.2"
  }
}
